/* General Body Styles */
body {
    font-family: 'Inter', sans-serif;
}

/* --- Gradient Text for the New Palette --- */
.gradient-text {
    background: linear-gradient(to right, #2563EB, #14B8A6); /* Blue to Teal */
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
}

/* --- "Pro Card" Style for Light Theme --- */
.pro-card {
    background-color: #FFFFFF;
    padding: 2rem;
    border-radius: 0.75rem; /* lg */
    border: 1px solid #E5E7EB; /* gray-200 */
    box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1); /* sm */
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}
.pro-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1); /* md */
}

/* Card style for the contact form container */
.pro-card-form {
    background-color: #FFFFFF;
    border-radius: 0.75rem; /* lg */
    border: 1px solid #E5E7EB; /* gray-200 */
    box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1); /* md */
}


/* --- Form Styling for Light Theme --- */
.form-input {
    @apply mt-1 block w-full px-4 py-3 bg-gray-50 border border-gray-300 rounded-lg shadow-sm text-gray-900;
    @apply focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500;
}
.form-btn {
    @apply bg-blue-600 text-white font-bold py-2 px-6 rounded-lg transition hover:bg-blue-700;
}
.form-btn-secondary {
    @apply bg-gray-300 text-gray-800 font-bold py-2 px-6 rounded-lg transition hover:bg-gray-400;
}
.form-btn-submit {
     @apply bg-gradient-to-r from-blue-600 to-teal-500 text-white font-bold py-3 px-8 rounded-lg text-lg hover:opacity-90 transition;
}
select.form-input {
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
    background-image: url("data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='none' stroke='%236B7280' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'%3e%3cpolyline points='6 9 12 15 18 9'%3e%3c/polyline%3e%3c/svg%3e");
    background-repeat: no-repeat;
    background-position: right 0.75rem center;
    background-size: 1.25em 1.25em;
    padding-right: 2.5rem;
}

/* --- Optional Form Field for Validation --- */
.b2a-form-extra {
    position: absolute;
    left: -9999px;
    top: -9999px;
}


/* --- Animation Logic (Unchanged) --- */
.form-step {
    display: none;
    animation: fadeIn 0.5s ease-in-out;
}
.form-step.active { display: block; }
@keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
}
.progress-bar-fill {
    transition: width 0.4s ease-in-out;
}
.fade-in {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
}
.fade-in.is-visible {
    opacity: 1;
    transform: translateY(0);
}